<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aengussong.prioritytime">

    <application
        android:name="com.aengussong.prioritytime.app.LeisureApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.aengussong.prioritytime.ui.NodeDetailsActivity" />
        <activity android:name="com.aengussong.prioritytime.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".widget.PriorityWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.aengussong.prioritytime.PRIORITY_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/priority_widget_info" />
        </receiver>

        <service
            android:name=".widget.PriorityWidgetService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <receiver android:name=".widget.PriorityBroadcast" />
    </application>

</manifest>