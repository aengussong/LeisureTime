<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NodeText" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="NodeText.Title">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_margin">@dimen/padding_normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Info">
        <item name="android:background">@drawable/btn_ok_background</item>
    </style>

    <style name="Button.Attention">
        <item name="android:background">@drawable/btn_cancel_background</item>
    </style>
</resources>
